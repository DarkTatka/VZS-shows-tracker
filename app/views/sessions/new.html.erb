<% title "Přihlášení" %>

<% form_tag sessions_path do %>
  <p>
    <%= label_tag :login, "ID číslo" %><br />
    <%= text_field_tag :login, params[:login] %>
  </p>
  <p>
    <%= label_tag :password, 'Heslo' %><br />
    <%= password_field_tag :password %>
  </p>
  <p><%= submit_tag "Přihlásit se" %></p>
<% end %>

